<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>servlet_add</servlet-name>
        <servlet-class>servlets.servlet_add</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet_edit_salary</servlet-name>
        <servlet-class>servlets.servlet_edit_salary</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet_edit_base_salary</servlet-name>
        <servlet-class>servlets.servlet_edit_base_salary</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet_delete_id</servlet-name>
        <servlet-class>servlets.servlet_delete_id</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet_update</servlet-name>
        <servlet-class>servlets.servlet_update</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet_add</servlet-name>
        <url-pattern>/servlet_add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet_edit_salary</servlet-name>
        <url-pattern>/servlet_edit_salary</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet_edit_base_salary</servlet-name>
        <url-pattern>/servlet_edit_base_salary</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet_delete_id</servlet-name>
        <url-pattern>/servlet_delete_id</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet_update</servlet-name>
        <url-pattern>/servlet_update</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
